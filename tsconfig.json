{
  "compilerOptions": {
    "rootDir": "./server/src",  // ✅ Ensures only server/src is compiled
    "outDir": "./server/dist",  // ✅ Compiles output files into dist/
    "module": "NodeNext",  // ✅ Ensures compatibility with ES Modules
    "moduleResolution": "NodeNext",
    "target": "ES2020",  // ✅ Keeps modern JavaScript compatibility
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,  // ✅ Allows JavaScript files
    "resolveJsonModule": true,  // ✅ Allows importing JSON files
    "skipLibCheck": true,  // ✅ Speeds up compilation
    "declaration": true,  // ✅ Generates .d.ts files for type support
    "sourceMap": true  // ✅ Enables source maps for debugging
  },
  "include": ["server/src"],  // ✅ Ensures only server/src is compiled
  "exclude": ["node_modules", "server/dist"]
}

